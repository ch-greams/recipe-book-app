{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "out",
        "baseUrl": ".",
        "moduleResolution": "node",
        "lib": [ "es2020", "DOM" ],
        "jsx": "react",
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "typeRoots": [ "./node_modules/@types", "./typings" ]
    },
    "include": [ "./src/**/*", "./typings" ]
}
