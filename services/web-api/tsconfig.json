{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "outDir": "out",
        "baseUrl": "./src",
        "paths": {
            "@common/*": [ "common/*" ],
            "@server/*": [ "server/*" ]
        },
        "moduleResolution": "node",
        "lib": [ "ES2020" ],
        "jsx": "react",
        "sourceMap": true,
        "esModuleInterop": true,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "typeRoots": [ "./node_modules/@types" ]
    },
    "include": [ "./src/**/*" ]
}
